{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>the-guild-org/shared-config:renovate", ":preserveSemverRanges"],
  "prConcurrentLimit": 20,
  "packageRules": [
    {
      "groupName": "graphql-tools",
      "matchPackagePrefixes": "@graphql-tools"
    },
    {
      "groupName": "stripe",
      "matchPackagePrefixes": ["@stripe", "stripe"]
    },
    {
      "groupName": "urql",
      "matchPackagePrefixes": ["@urql", "urql"]
    },
    {
      "groupName": "envelop",
      "matchPackagePrefixes": "@envelop"
    },
    {
      "groupName": "graphql-inspector",
      "matchPackagePrefixes": "@graphql-inspector"
    },
    {
      "groupName": "oclif",
      "matchPackagePrefixes": ["@oclif", "oclif"]
    },
    {
      "groupName": "sentry",
      "matchPackagePrefixes": ["@sentry", "sentry"]
    },
    {
      "groupName": "trpc",
      "matchPackagePrefixes": "@trpc"
    },
    {
      "groupName": "slonik",
      "matchPackagePrefixes": ["@slonik", "slonik"]
    },
    {
      "groupName": "supertokens",
      "matchPackagePrefixes": ["supertokens"]
    }
  ]
}
