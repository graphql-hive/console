    "sendmail": "1.6.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@hive/service-common": "workspace:*",
    "@types/mjml": "4.7.1",
    "@types/nodemailer": "6.4.8",
    "@types/sendmail": "1.4.4",
