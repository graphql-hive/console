{
  "name": "@hive/webhooks",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "bob runify --single",
    "dev": "tsup-node --config ../../../tsup/dev.config.node.ts src/dev.ts",
    "postbuild": "copyfiles -f \"node_modules/bullmq/dist/esm/commands/*.lua\" dist && copyfiles -f \"node_modules/bullmq/dist/esm/commands/includes/*.lua\" dist/includes",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "7.38.0",
    "@sentry/tracing": "7.38.0",
    "@trpc/server": "10.13.0",
    "bullmq": "3.9.0",
    "dotenv": "16.0.3",
    "got": "12.5.3",
    "ioredis": "5.3.1",
    "p-timeout": "6.1.1",
    "zod": "3.20.6"
  },
  "devDependencies": {
    "@hive/service-common": "workspace:*",
    "copyfiles": "2.4.1",
    "pino-pretty": "9.4.0",
    "tslib": "2.5.0"
  },
  "buildOptions": {
    "runify": true,
    "tsup": true,
    "tags": [
      "backend"
    ],
    "banner": "../../../scripts/banner.js"
  }
}
